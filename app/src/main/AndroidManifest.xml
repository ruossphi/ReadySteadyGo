<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.readysteadygo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.GameDisclosureActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.GameEvaluationActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".activity.GameMenuActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".activity.GamePlayActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".activity.GamePlayVsActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".activity.GameSelectMonetizationActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".activity.GameAdActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".activity.GameStoreActivity"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>