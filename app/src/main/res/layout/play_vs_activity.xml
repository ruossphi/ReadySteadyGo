<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <FrameLayout
        android:id="@+id/gamePlayTouchFrameVsP2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#CFCFCF"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/heartEnemy1Vs"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:background="@drawable/heart_full"
                android:rotation="180" />

            <ImageView
                android:id="@+id/heartEnemy2Vs"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:background="@drawable/heart_full"
                android:rotation="180" />

            <ImageView
                android:id="@+id/heartEnemy3Vs"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:background="@drawable/heart_full"
                android:rotation="180" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/playGameTxtVsP2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:rotation="180"
            android:text="Ready..."
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/playGameTimeTxtVsP2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="96dp"
            android:rotation="180"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/playGameTimeTxtVsP1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/playGameTxtVsP1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Ready..."
            android:textColor="#000000"
            android:textSize="30sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/gamePlayTouchFrameVsP1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#CFCFCF"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/heartPlayer1Vs"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:background="@drawable/heart_full" />

            <ImageView
                android:id="@+id/heartPlayer2Vs"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:background="@drawable/heart_full" />

            <ImageView
                android:id="@+id/heartPlayer3Vs"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:background="@drawable/heart_full" />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>